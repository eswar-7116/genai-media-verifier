# Environment Configuration for Backend
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,https://your-frontend.vercel.app

# Model Configuration
MODEL_DEVICE=cuda  # Options: cuda, cpu (auto-detects if cuda unavailable)

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads

# Feature Flags
NEURAL_ENSEMBLE_ENABLED=true
FREQUENCY_ANALYSIS_ENABLED=true
FACE_ANALYSIS_ENABLED=true
METADATA_ANALYSIS_ENABLED=true

# Analysis Settings
ENABLE_DYNAMIC_WEIGHTING=true
ENABLE_DETAILED_BREAKDOWN=true
ENABLE_CONFIDENCE_SCORES=true

# Risk Thresholds
RISK_THRESHOLD_HIGH=0.65
RISK_THRESHOLD_MEDIUM=0.40

# Model Paths (optional - defaults to HuggingFace)
# CUSTOM_MODEL_PATH=/path/to/your/model
